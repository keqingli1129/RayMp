{
  "name": "Ray Development",
  "image": "rayproject/ray:latest-py311",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },
  "runArgs": [
    "--shm-size=2g",
    "--gpus", "all" // <-- Add these two entries
  ],
  "workspaceFolder": "/workspace",
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind"
  ]
}
